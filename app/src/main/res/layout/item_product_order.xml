<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/product_order_img"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:id="@+id/product_order_name"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="21dp"
        android:text=""
        android:textColor="#333333"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/product_order_img"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/product_order_quatity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="4dp"
        android:text="Số lượng: 1"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@+id/product_order_img"
        app:layout_constraintTop_toBottomOf="@+id/product_order_name" />
    <TextView
        android:id="@+id/product_order_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="10dp"
        android:text="32.000 đồng"
        android:textColor="#eb3e32"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@+id/product_order_img"
        app:layout_constraintTop_toBottomOf="@+id/product_order_quatity" />

</androidx.constraintlayout.widget.ConstraintLayout>